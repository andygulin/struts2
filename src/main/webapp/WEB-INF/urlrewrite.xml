<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 2.6//EN"
        "http://tuckey.org/res/dtds/urlrewrite2.6.dtd">
<urlrewrite>

    <rule>
        <from>^/([a-zA-Z0-9]+)/([a-zA-Z0-9]+)</from>
        <to>/$1!$2.action</to>
    </rule>

    <rule>
        <from>^/([a-zA-Z0-9]+)</from>
        <to>/$1.action</to>
    </rule>

</urlrewrite>